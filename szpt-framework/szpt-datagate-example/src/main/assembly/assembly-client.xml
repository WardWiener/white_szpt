<assembly>
  <id>client</id>
  <formats>
    <format>zip</format>
  </formats>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>README.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/target/conf/client</directory>
      <outputDirectory>classes</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/target/scripts/client</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>run-client.bat</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>